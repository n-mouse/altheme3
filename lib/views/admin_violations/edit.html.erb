<h1>Редагування порушення</h1>

<%= form_for @violation, :url => admin_violation_path(@violation), method: :put do |f| %>

  <% if @violation.errors.any? %>
    <div id="error_explanation">
      <p>
        Такі помилки не дають зберегти:
      </p>
      <ul>
        <% @violation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <p>
    <%= f.label "Ім'я'" %>
    <%= f.text_field :name, style:"width:100%" %>
  </p>
    <p>
    <%= f.label "Організація" %>
    <%= f.text_field :organization, style:"width:100%" %>
  </p>
  <p>
    <%= f.label "Опис" %>
    <%= f.text_area :description, style:"width:100%;height:100px" %>
  </p>
  <p>
    <%= f.label "Телефон" %>
    <%= f.text_field :phone, style:"width:100%"   %>
  </p>
	<p>
    <%= f.label "Мейл" %>
    <%= f.text_field :email, style:"width:100%"   %>
  </p>
	<p>
    <%= f.label "Лінк на соцмережі" %>
    <%= f.text_field :link, style:"width:100%"   %>
  </p>
  </p>
   <%= f.label "запит" %>
	  <%= f.file_field :req, style:"width:100%" %>
  </p>
  <p>
	  <%= f.label "відповідь" %>
	  <%= f.file_field :resp, style:"width:100%" %>
  </p>
  <p>
    <%= f.submit "Зберегти", class: 'btn btn-success' %>
  </p>

<% end %>

<%= link_to 'Назад', admin_violation_path %>
