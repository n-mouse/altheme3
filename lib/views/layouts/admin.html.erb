<!DOCTYPE html>
<html lang="en-gb">
    <head>
      <meta http-equiv="content-type" content="text/html;charset=UTF-8" >
      <%= csrf_meta_tags %>

      <title><%= site_name %> admin<%= @title ? ":" : "" %> <%=@title%></title>

      <%= javascript_include_tag "admin" %>
      <%= stylesheet_link_tag "admin", :title => "Main", :rel => "stylesheet" %>
      <%= render :partial => 'layouts/favicon' %>

      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    </head>
    <body class="admin">
    	<%= tinymce_assets %>
      <div id="main" class="container">
        <%= render :partial => 'admin_general/admin_navbar' %>
        <% if flash[:error] %>
          <div class="row">
            <div class="span12">
              <div class="alert alert-error">
                <%= render_flash(flash[:error]) %>
              </div>
            </div>
          </div>
        <% end %>

        <% if flash[:notice] %>
          <div class="row">
            <div class="span12">
              <div class="alert alert-info">
                <%= render_flash(flash[:notice]) %>
              </div>
            </div>
          </div>
        <% end %>

        <%= yield  %>
      </div>
    </body>
</html>
