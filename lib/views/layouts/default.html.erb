            <% end %>
</p>
          
      <% else %>
          <div style="height:17px"></div>
          <%= link_to "#{image_tag('login-head.png')} <span>Авторизуватись</span>".html_safe, signin_path(:r => request.fullpath), class: "login-button" %>
      <% end %>
	   	
	   	
			
		</section>
	</div>
  <div class="bottom-section">
    <nav class="main-nav">

    <ul class="rozdily site-parts">
        <li><%= link_to _("ЯК ПРАЦЮЄ САЙТ"), help_about_path %></li>
        <li><%= link_to _("ПУБЛІКАЦІЇ"), publications_path %></li>
        <li><%= link_to _("ЗВОРОТНІЙ ЗВ’ЯЗОК"), help_contact_url %></li>
    </ul>
    </nav>
  </div>
</div>

