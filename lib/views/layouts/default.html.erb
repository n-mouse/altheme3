</div>
<% end %>
	
<div id="banner_inner">
  <div class="top-section">
	<section class="fillin wrapper"> </section>
    <%= render :partial => 'general/up' %>
   
  </div>
	<div class="header wrapper">
		<section class="socials">
			<%= link_to image_tag('fb.png'), 'https://www.facebook.com/pages/%D0%94%D0%BE%D1%81%D1%82%D1%83%D0%BF-%D0%B4%D0%BE-%D0%9F%D1%80%D0%B0%D0%B2%D0%B4%D0%B8/699190593466761', :class=>'fbtw' %>
            <%= link_to image_tag('tw.png'), "https://twitter.com/DostupPravda", :class=>'fbtw' %>
		</section>
		<section class="title">
			<%= link_to image_tag("logo.png"), frontpage_url, class: "logo-img" %>
			<%= link_to image_tag("logo_title.png"), frontpage_url %>
		</section>
		<section class="search">
			<%= link_to image_tag("search.png"), request_list_all_url, class: "search-icon"  %>
	   </section>
	   <section class="login">
	   	<% if @user %>
	   	<p>
	   	  <%= _('Вітаємо, <span style="font-weight:700; color: black">{{username}}</span>!', :username => h(@user.name))%>
