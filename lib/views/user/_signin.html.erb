<div id="signin">

  <%= form_tag(signin_path, {:id => "signin_form"}) do %>
    <%= foi_error_messages_for :user_signin %>

    <!--<% if not sign_in_as_existing_user %>
    <h2><%= _('If you\'ve used {{site_name}} before', :site_name=>site_name)%></h2>
    <% end %>-->

    <p>
    <label class="form_label" for="user_signin_email">Ел. пошта:</label>
      <%= text_field 'user_signin', 'email', { :size => 20, :tabindex => 10 } %>
    </p>

    <p>
    <label class="form_label" for="user_signin_password">Пароль:</label>
      <%= password_field 'user_signin', 'password', { :size => 15, :tabindex => 20 } %>
    </p>

    <p class="form_note">
      <%= link_to _('Forgotten your password?'), new_password_change_path(:pretoken => h(params[:token])), :tabindex => 80 %>
    </p>

    <p class="form_checkbox">
      <%= check_box_tag("remember_me",1, false, class: 'css-checkbox') %>
  		<label for="remember_me" name="checkbox2_lbl" class="css-label lite-red-check">Запам’ятати мене</label>
    </p>

    <div class="form_button">
      <%= hidden_field_tag 'token', params[:token], {:id => 'signin_token' } %>
      <%= hidden_field_tag :modal, params[:modal], {:id => 'signin_modal' } %>
      <%= submit_tag _('Sign in'), :tabindex => 50 %>
    </div>
  <% end %>

</div>
